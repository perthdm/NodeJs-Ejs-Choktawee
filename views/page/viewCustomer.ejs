<%- include('../layouts/header', {title: 'ข้อมูลลูกค้า'}); -%>
<%- include('../layouts/css'); -%>
<%- include('../layouts/endheader'); -%>
<%- include('../layouts/sidebar',{active:'customer'}); -%>
<%- include('../layouts/topbar'); -%>






<!-- content -->



<div class="content">
    <div class="title margin-top-30">
        <span><i class="fas fa-home "></i> ข้อมูลลูกค้า</span>
        <div class="line"></div>
    </div>



    <div style="display: flex;justify-content: center;">
        <div style="max-width: 600px;width: 100%;">
            <label class="header">ข้อมูลลูกค้า</label>

            <div style="padding-left: 20px;padding-top: 20px;">

                <div class="form-row">
                    <div class="form-group col">
                        <label for="inputEmail4">ชื่อ</label>
                        <input type="text" class="form-control" required disabled name="firstname"
                            value="<%= result.firstname %>">
                    </div>

                    <div class="form-group col">
                        <label for="inputEmail4">นามสกุล</label>
                        <input type="text" class="form-control" required disabled name="lastname"
                            value="<%= result.lastname %>">
                    </div>

                </div>

                <div class="form-group">
                    <label for="inputAddress">เลขประจำตัวประชาชน/เลขผู้เสียภาษี</label>
                    <input type="text" class="form-control" required disabled name="idCard"
                        value="<%= result.idCard %>">
                </div>

                <div class="form-group">
                    <label for="inputAddress">วัน เดือน ปีเกิด</label>
                    <input class="form-control" required disabled name="birthday"
                        value="<%= result.birthday.getDate() %>/<%= result.birthday.getMonth() %>/<%= result.birthday.getFullYear() %>">
                </div>

                <div class="form-group">
                    <label for="inputAddress">E-mail</label>
                    <input type="text" class="form-control" required disabled name="email" value="<%= result.email %>">
                </div>

                <div class="form-group">
                    <label for="inputAddress">เบอร์โทรศัพท์</label>
                    <input type="text" class="form-control" required disabled name="tel" value="<%= result.tel %>">
                </div>



                <div class="form-row">

                    <div class="form-group col">
                        <label for="inputEmail4">บ้านเลขที่</label>
                        <input type="text" class="form-control" required disabled name="addressNumber"
                            value="<%= result.address.addressNumber %>">
                    </div>

                    <div class="form-group col">
                        <label for="inputEmail4">ถนน</label>
                        <input type="text" class="form-control" required disabled name="street"
                            value="<%= result.address.street %>">
                    </div>

                </div>


                <div class="form-row">

                    <div class="form-group col">
                        <label for="inputEmail4">ตำบล/เขต</label>
                        <input type="text" class="form-control" required disabled name="subdistrict"
                            value="<%= result.address.subdistrict %>">
                    </div>

                    <div class="form-group col">
                        <label for="inputEmail4">อำเภอ</label>
                        <input type="text" class="form-control" required disabled name="district"
                            value="<%= result.address.district %>">
                    </div>

                </div>


                <div class="form-row">

                    <div class="form-group col">
                        <label for="inputEmail4">จังหวัด</label>

                        <input type="text" class="form-control" required disabled name="province" id="province"
                            value="<%= result.address.province %>">
                    </div>

                    <div class="form-group col">
                        <label for="inputEmail4">รหัสไปรษณีย์</label>
                        <input type="text" class="form-control" required disabled name="zipCode"
                            value="<%= result.address.zipCode %>">
                    </div>

                </div>
                <a href="/customer">
                    <button class="btn-green btn-full" type="submit">ย้อนกลับ</button>
                </a>


            </div>


        </div>
    </div>
</div>

<!-- contenr -->


</body>

</html>
<%- include('../layouts/javascript'); -%>



<script>
    if ('<%= result.address.province %>') {
        document.getElementById("province").value = '<%= result.address.province %>';
    }
</script>